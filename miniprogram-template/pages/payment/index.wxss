.payment-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  padding: 40rpx;
}

.order-info {
  width: 100%;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.amount {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 20rpx;
}

.desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.btn-pay {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-pay::after {
  border: none;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}
