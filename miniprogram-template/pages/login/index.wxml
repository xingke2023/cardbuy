<view class="login-container">
  <view class="header">
    <text class="title">价值派·开户易</text>
    <text class="subtitle">专业银行卡办理服务平台</text>
  </view>

  <view class="form">
    <!-- 微信一键登录 -->
    <button class="btn-wechat-login" bindtap="handleWechatLogin" loading="{{wechatLoading}}">
      <text class="wechat-icon">📱</text>
      <text>微信一键登录</text>
    </button>

    <!-- 其他登录方式 -->
    <view class="other-login-toggle" bindtap="toggleOtherLogin">
      <text class="toggle-text">{{showOtherLogin ? '收起其他登录方式' : '其他登录方式'}}</text>
      <text class="toggle-icon">{{showOtherLogin ? '▲' : '▼'}}</text>
    </view>

    <!-- 邮箱密码登录 (可展开/收起) -->
    <view class="email-login-section" wx:if="{{showOtherLogin}}">
      <view class="divider-line">
        <text class="divider-text">账号密码登录</text>
      </view>

      <view class="input-group">
        <text class="label">邮箱</text>
        <input
          class="input"
          placeholder="请输入邮箱"
          type="text"
          bindinput="onEmailInput"
          value="{{email}}"
        />
      </view>

      <view class="input-group">
        <text class="label">密码</text>
        <input
          class="input"
          placeholder="请输入密码"
          type="password"
          bindinput="onPasswordInput"
          value="{{password}}"
        />
      </view>

      <button class="btn-login" bindtap="handleLogin" loading="{{loading}}">
        登录
      </button>

      <view class="links">
        <text class="link" bindtap="goRegister">注册账号</text>
        <text class="divider">|</text>
        <text class="link" bindtap="goForgotPassword">忘记密码</text>
      </view>
    </view>
  </view>
</view>
