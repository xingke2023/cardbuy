.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f7fa;
  padding: 60rpx 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 100rpx;
}

.title {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  display: block;
  font-size: 30rpx;
  color: #7f8c8d;
  letter-spacing: 2rpx;
}

.form {
  width: 100%;
  padding: 0;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #2c3e50;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #e0e6ed;
  border-radius: 16rpx;
  padding: 0 28rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  transition: all 0.3s;
}

.input:focus {
  background: #ffffff;
  border-color: #3498db;
}

.btn-login {
  width: 100%;
  height: 96rpx;
  background: #3498db;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-login::after {
  border: none;
}

.links {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}

.link {
  font-size: 26rpx;
  color: #3498db;
  padding: 0 20rpx;
}

.divider {
  color: #bdc3c7;
  font-size: 26rpx;
}

/* 微信登录按钮 */
.btn-wechat-login {
  width: 100%;
  height: 100rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.btn-wechat-login::after {
  border: none;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

/* 其他登录方式切换按钮 */
.other-login-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  cursor: pointer;
}

.toggle-text {
  font-size: 28rpx;
  color: #3498db;
  margin-right: 8rpx;
  font-weight: 500;
}

.toggle-icon {
  font-size: 20rpx;
  color: #3498db;
}

/* 邮箱登录区域 */
.email-login-section {
  margin-top: 20rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 分隔线 */
.divider-line {
  display: flex;
  align-items: center;
  margin: 30rpx 0 40rpx;
}

.divider-line::before,
.divider-line::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background: #e0e0e0;
}

.divider-text {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #999;
}
